			Если Элемент.Поле = ДоступноеПоле.Поле Тогда
				ПолеНайдено = Истина;

				Прервать;
			КонецЕсли;
		КонецЦикла;

		Если ПолеНайдено Тогда
			Продолжить;
		КонецЕсли;

		ВыбранноеПоле = ВыбранныеПоля.Элементы.Добавить(Тип("ВыбранноеПолеКомпоновкиДанных"));
		ЗаполнитьЗначенияСвойств(ВыбранноеПоле, ДоступноеПоле);
	КонецЦикла;
